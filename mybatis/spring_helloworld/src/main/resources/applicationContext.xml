<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
        bean：配置一个bean对象，将对象交给IOC容器管理
        属性：
        id：bean的唯一标识，不能重复
        class：设置bean对象所对应的类型
    -->
    <bean id="HelloSpring" class="com.atguigu.pring.pojo.HelloSpring"></bean>
    <bean id="studentOne" class="com.atguigu.pring.pojo.Student">
        <property name="sid" value="001"></property>
        <property name="sname" value="name001"></property>
        <property name="age" value="21"></property>
        <property name="gender" value="男"></property>
    </bean>
    <bean id="studentTwo" class="com.atguigu.pring.pojo.Student">
        <constructor-arg  name="sname">
            <value><![CDATA[a < b]]></value>
        </constructor-arg>
        <constructor-arg name="gender" >
            <null />
        </constructor-arg>
        <constructor-arg name="sid" value="002"></constructor-arg>
        <constructor-arg name="age" value="22"></constructor-arg>
    </bean>

</beans>